<html>

<head>
    {% include "theme::partials/metadata" %}
</head>

<body>

{% include "theme::partials/header" %}

<main id="main">
    <div class="container">

        {% include "theme::partials/messages" %}

        {% block content %}{% endblock %}

    </div>
</main>

{% include "theme::partials/footer" %}
{% include "theme::partials/assets" %}
<script>
    window.addEventListener("scroll", function(e){
        var target = document.getElementsByClassName('main');

        if(target.length > 0) {
            target = target[0];
        }

        if(window.scrollY > 100) {
            target.classList.remove('navbar-transparent');
            target.classList.add('navbar-default');
        } else {
            target.classList.remove('navbar-default');
            target.classList.add('navbar-transparent');
        }
    });
</script>
</body>
